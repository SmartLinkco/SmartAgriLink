{
  "name": "smartagrilink-landing",
  "version": "1.0.0",
  "description": "Modern landing page for SmartAgriLink - A Digital Agriculture Supply Chain Platform",
  "main": "index.html",
  "scripts": {
    "start": "npx serve .",
    "dev": "npx live-server .",
    "build": "node -e \"const fs=require('fs'); fs.mkdirSync('public', {recursive:true}); ['index.html','styles.css','script.js','logo.svg','SmartAgriLink.png'].forEach(f=>fs.existsSync(f)&&fs.copyFileSync(f,'public/'+f));\"",
    "deploy": "vercel --prod"
  },
  "keywords": [
    "agriculture",
    "supply-chain",
    "africa",
    "digital-platform",
    "ai",
    "landing-page"
  ],
  "author": "SmartAgriLink",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/SmartLinkco/SmartAgriLink.git"
  },
  "devDependencies": {
    "live-server": "^1.2.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
